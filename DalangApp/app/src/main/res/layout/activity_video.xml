<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".content.VideoActivity"
    android:layout_gravity="top">


    <androidx.cardview.widget.CardView
        android:id="@+id/btn_backToHome"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:cornerRadius="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:padding="3dp"
            android:src="@drawable/ic_baseline_arrow_back_24_black" />
    </androidx.cardview.widget.CardView>

    <VideoView
        android:id="@+id/videoView1"
        android:foregroundGravity="top"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_judul_video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lima Teknik Dasar Cepengan Wayang"
        android:textSize="20dp"
        android:fontFamily="@font/roboto_bold"
        android:textColor="@color/medium_brown"
        app:layout_constraintTop_toBottomOf="@id/videoView1"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="20dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/tv_desc_video"
        android:layout_height="wrap_content"
        android:text="Video ini berisikan pengetahuan tentang salah satu unsur garap pakeliran, yaitu unsur garap sabet. Secara khusus adalah teknik dasar cepengan (cara memegang) wayang gaya Surakarta. Video ini dibuat untuk yang sedang belajar mendalang atau masyarakat awam yang cinta dan peduli dengabmn seni pedalangan."
        app:layout_constraintTop_toBottomOf="@id/tv_judul_video"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="20dp"
        android:textColor="@color/black"
        android:justificationMode="inter_word"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sumber : YT Catur Nugroho"
        app:layout_constraintTop_toBottomOf="@id/tv_desc_video"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="20dp"
        android:textColor="@color/black"
        android:justificationMode="inter_word"
        />

</androidx.constraintlayout.widget.ConstraintLayout>